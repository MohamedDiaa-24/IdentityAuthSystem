@using IdentityAuthSystem.ViewModels;
@model LoginViewModel;
@{
    Layout = "_AccountLayout";
    ViewBag.Title = "Login";
}
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="text-black">
                <div class="p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>

                            <form class="mx-1 mx-md-4" asp-action="Login" method="post">
                                <div asp-validation-summary="ModelOnly"></div>


                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <label class="form-label"asp-for="Email" >Your Email</label>
                                        <input class="form-control"  asp-for="Email"/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" asp-for="Password">Password</label>
                                        <input class="form-control"asp-for="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-check d-flex mb-4 justify-content-between">
                                    <div>
                                        <input class="form-check-input me-2" asp-for="RememberMe" />
                                        <label class="form-check-label" asp-for="RememberMe"></label>
                                        <span asp-validation-for="RememberMe"></span>
                                    </div>
                                    <div>
                                        <a asp-action="VerifyEmail" asp-controller="Account" class="text-decoration-none">Forget Password?</a>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between  mb-3 mb-lg-4">
                                    <a class="btn btn-danger btn-lg" asp-action="Index" asp-controller="Home">Back</a>

                                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                                </div>
                                <div class="d-flex justify-content-between  mb-3 mb-lg-4">
                                    <p class="">
                                        Don't have an account?
                                        <a asp-action="Register" asp-controller="Account" class="text-decoration-none">
                                            Register
                                        </a>
                                    </p>
                                </div>
                            </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                            class="img-fluid" alt="Sample image">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{
       await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}